<!DOCTYPE html>
<html>
    <head>
        <% include ./partials/head.ejs %>
    </head>
    <body>
        <% include ./partials/header.ejs %>

        <h1>Coffee</h1>
        <a href="/shop/products/new">Create New Product</a>
        <ul>
            <% for(let i = 0; i < shop.length; i++){ %>
                <div>
                    <a href="/shop/products/<%=shop[i].id%>">
                        <%=shop[i].img%>
                    </a>
                    <%=shop[i].name; %>
                    <%=shop[i].notes %>
                    <form action="/products/<%=shop[i].id%>?_method=DELETE" method="POST">
                        <input type="submit" value="DELETE">
                    </form>
                </div>
            <% } %>
        </ul>
        <a href="/shop">Back</a>

    <% include ./partials/foot.ejs %>
    </body>
</html>