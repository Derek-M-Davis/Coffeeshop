<!DOCTYPE html>
<html>
    <head>
        <% include ./partials/head.ejs %>
    </head>
    <body>
        <h1>Products page</h1>
        <ul>
            <% for(let i = 0; i < shop.length; i++){ %>
                <div>
                    <%=shop[i].img; %> 
                    <%=shop[i].name; %>
                    <%=shop[i].notes %>
                    <form action="/shop/<%=shop[i].id%>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete">
                    </form>
                </div>
            <% } %>
        </ul>
        <a href="/shop">Back to Home Page</a>

    <% include ./partials/foot.ejs %>
    </body>
</html>